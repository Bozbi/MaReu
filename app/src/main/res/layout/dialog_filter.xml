<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">




    <ImageView
        android:id="@+id/img_filter_dialog_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/img_filter_dialog_room"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_filter_dialog_time"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="24dp"
        />

    <ImageView
        android:id="@+id/img_filter_dialog_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location"
        app:layout_constraintTop_toBottomOf="@id/img_filter_dialog_time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_filter_dialog_room"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        />
    <TextView
        android:id="@+id/txt_filter_dialog_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Toutes les dates"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@+id/img_filter_dialog_time"
        app:layout_constraintBottom_toBottomOf="@id/img_filter_dialog_time"
        app:layout_constraintStart_toEndOf="@id/img_filter_dialog_time"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txt_filter_dialog_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:hint="Toutes les salles"
        app:layout_constraintTop_toTopOf="@+id/img_filter_dialog_room"
        app:layout_constraintBottom_toBottomOf="@id/img_filter_dialog_room"
        app:layout_constraintStart_toEndOf="@id/img_filter_dialog_room"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/img_filter_dialog_time_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@+id/img_filter_dialog_time"
        app:layout_constraintBottom_toBottomOf="@+id/img_filter_dialog_time"
        app:layout_constraintStart_toEndOf="@+id/txt_filter_dialog_time"
        android:layout_marginStart="4dp"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/img_filter_dialog_room_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@+id/img_filter_dialog_room"
        app:layout_constraintBottom_toBottomOf="@+id/img_filter_dialog_room"
        app:layout_constraintStart_toEndOf="@+id/txt_filter_dialog_room"
        android:layout_marginStart="4dp"
        android:visibility="invisible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>


