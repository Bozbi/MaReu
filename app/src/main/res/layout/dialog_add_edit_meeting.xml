<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/edtxt_meeting_title"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:gravity="center"
        android:hint="RÃ©union"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_meeting_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/txt_meeting_title"
        app:layout_constraintTop_toTopOf="@+id/txt_meeting_title" />


    <EditText
        android:id="@+id/edtxt_meeting_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:focusable="false"
        android:hint="25/11/2019"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/img_time_start"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/img_date"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_meeting_title" />

    <EditText
        android:id="@+id/edtxt_meeting_start_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:hint="11:45"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/edtxt_meeting_date"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/img_time_start"
        app:layout_constraintEnd_toStartOf="@+id/img_time_stop"
        app:layout_constraintTop_toTopOf="@+id/edtxt_meeting_date" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_time_stop"
        android:src="@drawable/ic_time_stop"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/edtxt_meeting_date"
        app:layout_constraintEnd_toStartOf="@id/edtxt_meeting_stop_hour"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/edtxt_meeting_start_hour"
        app:layout_constraintTop_toTopOf="@+id/edtxt_meeting_date"/>



    <EditText
        android:id="@+id/edtxt_meeting_stop_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="12:45"
        android:textSize="14sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_time_stop"
        app:layout_constraintTop_toTopOf="@+id/edtxt_meeting_date"
        app:layout_constraintBottom_toBottomOf="@+id/edtxt_meeting_date"/>



    <ImageView
        android:id="@+id/img_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_date"
        app:layout_constraintBottom_toBottomOf="@+id/edtxt_meeting_date"
        app:layout_constraintEnd_toStartOf="@+id/edtxt_meeting_date"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edtxt_meeting_date"

        />

    <ImageView
        android:id="@+id/img_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:src="@drawable/ic_time_start"
        app:layout_constraintBottom_toBottomOf="@+id/edtxt_meeting_date"
        app:layout_constraintEnd_toStartOf="@+id/edtxt_meeting_start_hour"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/edtxt_meeting_date"
        app:layout_constraintTop_toTopOf="@+id/edtxt_meeting_date" />

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/spin_meeting_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:smsp_hint="Salle"
        app:smsp_hintSize="14sp"
        app:smsp_itemSize="14sp"
        android:spinnerMode="dialog"
        app:smsp_itemColor="@android:color/black"
        app:smsp_hintColor="@color/colorPrimaryDark"
        app:smsp_enableFloatingLabel="false"
        app:smsp_itemListHintBackgroundColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxt_meeting_stop_hour"
        />

    <TextView
        android:id="@+id/txt_meeting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom"
        android:textColor="#00574B"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/edtxt_meeting_title"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_meeting_participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin_meeting_room"
        android:text="E-mails"
        android:layout_marginRight="6dp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toStartOf="@+id/edtx_add_particpant"
        />

    <EditText
        android:id="@+id/edtx_add_particpant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/txt_meeting_participants"
        app:layout_constraintTop_toTopOf="@+id/txt_meeting_participants"
        app:layout_constraintBottom_toBottomOf="@+id/txt_meeting_participants"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="example@lamazon.fr"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/img_add_participant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/edtx_add_particpant"
        app:layout_constraintBottom_toBottomOf="@+id/edtx_add_particpant"
        app:layout_constraintEnd_toEndOf="@+id/edtx_add_particpant"
        android:src="@drawable/ic_add_contact"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcycl_list_participant"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/edtx_add_particpant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/participant_item"
        />



</androidx.constraintlayout.widget.ConstraintLayout>