<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".view.AddMeetingActivity">


    <EditText
        android:id="@+id/edittext_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:gravity="center"
        android:hint="Nouvelle RÃ©union"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <Button
        android:id="@+id/edittext_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="2017/02/29"
        android:inputType="date"
        android:padding="6dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageview_date"
        app:layout_constraintTop_toBottomOf="@+id/edittext_title"
        android:backgroundTint="@android:color/white"/>

    <EditText
        android:id="@+id/edittext_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:hint="14:45"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/imageview_time_stop"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/imageview_time_start"
        app:layout_constraintTop_toBottomOf="@+id/edittext_date"

        />

    <EditText
        android:id="@+id/edittext_time_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:hint="14:45"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/imageview_time_stop"
        app:layout_constraintTop_toBottomOf="@+id/edittext_date" />

    <ImageView
        android:id="@+id/imageview_time_start"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_time_start"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_time_start"
        app:layout_constraintEnd_toStartOf="@+id/edittext_time_start"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edittext_time_start" />


    <ImageView
        android:id="@+id/imageview_date"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_date"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_date"
        app:layout_constraintEnd_toStartOf="@+id/edittext_date"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edittext_date" />


    <ImageView
        android:id="@+id/imageview_time_stop"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_time_stop"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_time_stop"
        app:layout_constraintEnd_toStartOf="@+id/edittext_time_stop"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/edittext_time_start"
        app:layout_constraintTop_toTopOf="@+id/edittext_time_stop" />


    <ImageView
        android:id="@+id/imageview_room"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_location"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_room"
        app:layout_constraintEnd_toStartOf="@+id/spinner_room"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner_room"
        app:layout_constraintVertical_bias="0.2" />

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/spinner_room"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:spinnerMode="dialog"
        android:layout_marginLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/imageview_room"
        app:layout_constraintTop_toBottomOf="@+id/edittext_time_start"
        app:smsp_enableFloatingLabel="false"
        app:smsp_hint="Salle"
        app:smsp_hintColor="@android:color/darker_gray"
        app:smsp_hintSize="20dp"
        app:smsp_itemColor="@android:color/black"
        app:smsp_itemListHintBackgroundColor="@color/colorAccent"
        app:smsp_itemSize="20dp"
        app:smsp_underlineSize="0.5dp"

        />


    <EditText
        android:id="@+id/textview_list_participants"
       android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_room"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageview_contact"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginLeft="16dp"
        android:text="boris@gmail.com, celine@gmail.com"
        android:layout_marginRight="16dp"
        android:gravity="center|top"
        android:background="@null"

        />

    <ImageView
        android:id="@+id/imageview_contact"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_contact"
        app:layout_constraintTop_toTopOf="@+id/textview_list_participants"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>








</androidx.constraintlayout.widget.ConstraintLayout>